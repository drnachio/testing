{
  "name": "ts-next-boilerplate",
  "version": "1.0.1",
  "description": "TypeScript Next.js Boilerplate",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start -p 80",
    "lint": "eslint \"**/*.{ts,tsx}\" --ignore-pattern node_modules/ --ignore-pattern prod_node_modules/",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "test-coverage-dev": "NODE_ENV=development jest --coverage --watchAll",
    "test-dev": "NODE_ENV=development npx jest --watch",
    "docker-build": "docker build -t boilerplate .",
    "docker-run ": "docker run -p 8080:80 -e PROJECT_NAME=BinPar boilerplate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BinPar/ts-next-boilerplate.git"
  },
  "author": "Ignacio <nacho@binpar.com> (https://www.binpar.com/)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/BinPar/ts-next-boilerplate/issues"
  },
  "homepage": "https://github.com/BinPar/ts-next-boilerplate#readme",
  "dependencies": {
    "next": "^11",
    "react": "^17",
    "react-dom": "^17"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^12.0.0",
    "@types/jest": "^27.0.1",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.7.6",
    "@types/react": "^17",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "babel-jest": "^27.1.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-unused-imports": "^1.1.4",
    "jest": "^27.1.0",
    "jest-watch-typeahead": "^0.6.1",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.2"
  }
}
